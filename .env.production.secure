# 安全的生产环境配置
ENV=production

# 应用端口 (仅这些端口对外暴露)
APP_PORT=5512
MCP_PORT=5513

# 服务器配置
SERVER_BASE_URL=http://8.219.206.213:5512
LOG_LEVEL=info
TZ=Asia/Shanghai

# Redis配置 (仅内部访问，不暴露端口)
REDIS_HOST=jarvis_redis
REDIS_PORT=6379
REDIS_DB=0

# MinIO配置 (仅内部访问，不暴露端口)
MINIO_ENDPOINT=jarvis_minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=images

# 网络配置
NETWORK_NAME=jarvis-production

# 资源配置
MEMORY_LIMIT=2G
CPU_LIMIT=1.8
MEMORY_RESERVE=512M
CPU_RESERVE=0.5
WORKERS=4
WORKER_CONCURRENCY=4

# 健康检查
HEALTH_START_PERIOD=60

# Google凭证路径
GOOGLE_CREDS_PATH=/home/ecs-user/workspace/google_oauth

# Google Cloud配置
VEO3_PROJECT_ID=qhhl-veo
VEO3_LOCATION=us-central1
VEO3_STORAGE_BUCKET=veo-output-pub